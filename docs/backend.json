{
  "entities": {
    "calculation": {
      "title": "Calculation",
      "description": "Represents a single calculation performed by the user.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of calculation.",
          "enum": [
            "base",
            "text"
          ]
        },
        "input": {
          "type": "string",
          "description": "The input for the calculation."
        },
        "output": {
          "type": "string",
          "description": "The result of the calculation."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the calculation was created."
        }
      },
      "required": [
        "type",
        "input",
        "output",
        "createdAt"
      ]
    },
    "message": {
      "title": "Message",
      "description": "A single message in a chat conversation.",
      "type": "object",
      "properties": {
        "role": {
          "type": "string",
          "description": "The role of the message sender.",
          "enum": [
            "user",
            "assistant"
          ]
        },
        "content": {
          "type": "string",
          "description": "The content of the message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the message was created."
        }
      },
      "required": [
        "role",
        "content",
        "createdAt"
      ]
    },
    "pronunciationAttempt": {
      "title": "Pronunciation Attempt",
      "description": "Represents a user's attempt to pronounce a Quranic verse.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user making the attempt."
        },
        "verse": {
          "type": "string",
          "description": "The text of the Quranic verse."
        },
        "isCorrect": {
          "type": "boolean",
          "description": "Whether the pronunciation was deemed correct."
        },
        "feedback": {
          "type": "string",
          "description": "The feedback provided by the AI."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of the attempt."
        }
      },
      "required": [
        "userId",
        "verse",
        "isCorrect",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/calculations/{calculationId}": {
      "schema": {
        "$ref": "#/entities/calculation"
      },
      "description": "Stores the history of calculations."
    },
    "/conversations/{messageId}": {
        "schema": {
            "$ref": "#/entities/message"
        },
        "description": "Stores the history of chat messages."
    }
  }
}
